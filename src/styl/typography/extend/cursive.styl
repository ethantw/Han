
$han-cursive
  font-family: $han-serif, han-typeface("Han Kaiti", $_default-variant, $han-cursive-zh), cursive, serif

$han-cursive-hant
  font-family: han-biaodian(Serif, $han-biaodian-hant), "Numeral LF Serif", $han-serif, "Zhuyin Kaiti", han-typeface("Han Kaiti", $han-glyph-set-hant, $han-cursive-zh), cursive, serif
  hanging-serif() if $han-hanging-hant

$han-cursive-hans
  font-family: han-biaodian(Serif, $han-biaodian-hans), "Numeral LF Serif", $han-serif, han-typeface("Han Kaiti", $han-glyph-set-hans, $han-cursive-zh), cursive, serif
  hanging-serif() if $han-hanging-hans

$han-cursive-ja
  font-family: "Yakumono Serif", "Numeral LF Serif", $han-serif, cursive, serif
  hanging-serif() if $han-hanging-ja

